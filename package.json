{
  "name": "react-native-hybrid",
  "version": "0.0.2",
  "description": "A React Boilerplate to share code between Web, iOS and Android applications",
  "main": "gulpfile.js",
  "scripts": {
    "start": "npm run env-web && npm run watch & npm run browser:sync",
    "watch": "npm run watch:css & npm run watch:js",
    "build:prod": "npm run build:css && npm run postCSS && npm run build:js && npm run uglify:js",
    "serve": "forever start ./node_modules/http-server/bin/http-server -p 80 -d false",
    "native-start": "adb reverse tcp:8081 tcp:8081 & npm run env-native && npm run native-copy && npm run native-watch & npm run native-packager",
    "native-watch": "NODE_ENV=development node ./node_tasks/watch-native.js",
    "native-copy": "npm run native-clean && cp -R app/js ApplicationNative/ApplicationNative/app",
    "native-clean": "rm -rf ApplicationNative/ApplicationNative/app",
    "native-packager": "./ApplicationNative/ApplicationNative/node_modules/react-native/packager/packager.sh",
    "env-web": "NODE_ENV=web node ./node_tasks/env_task.js",
    "env-native": "NODE_ENV=native node ./node_tasks/env_task.js",
    "browser:sync": "browser-sync start --server 'ApplicationWeb' --files 'public/css/*.css'",
    "build:css": "node-sass app/scss/ -o public/css",
    "build:js": "NODE_ENV=production node ./node_tasks/build.js",
    "uglify:js": "uglifyjs  public/js/app.js --output public/js/app.min.js",
    "watch:css": "watch 'npm run build:css' app/scss",
    "watch:js": "NODE_ENV=development node ./node_tasks/watch.js",
    "postCSS": "postcss -u autoprefixer cssnano -r public/css/*"
  },
  "keywords": [
    "react",
    "react native",
    "iOS",
    "android",
    "hybrid",
    "share code",
    "cross platform"
  ],
  "authors": [
    "Simon Holmes (https://github.com/srsholmes)",
    "Joe Harlow (https://github.com/f5io/)",
    "Brian Daviadoff (https://github.com/FThreeNiiX)"
  ],
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "babel": "^6.5.2",
    "babel-plugin-react-transform": "^2.0.2",
    "babel-plugin-transform-decorators-legacy": "^1.3.0",
    "babelify": "^7.2.0",
    "browser-sync": "^2.12.3",
    "browserify": "^13.0.0",
    "colors": "^1.1.2",
    "cssnano": "^3.6.2",
    "envify": "^3.4.0",
    "http-server": "^0.9.0",
    "livereactload": "^2.2.3",
    "node-sass": "^3.4.2",
    "postcss-cli": "^2.5.2",
    "react-proxy": "^1.1.8",
    "redux-logger": "^2.6.1",
    "sw-precache": "^3.2.0",
    "uglifyify": "^3.0.1",
    "watch": "^0.17.1",
    "watchify": "^3.7.0"
  },
  "dependencies": {
    "babel-cli": "^6.9.0",
    "babel-core": "^6.9.0",
    "babel-polyfill": "^6.9.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.3.13",
    "babel-preset-react-native-stage-0": "^1.0.1",
    "babel-preset-stage-0": "^6.5.0",
    "dotenv": "^2.0.0",
    "express": "^4.13.4",
    "mixin": "^0.2.0",
    "material-design-lite": "^1.1.3",
    "ramda": "^0.21.0",
    "react": "^15.0.0",
    "react-dom": "^15.0.0",
    "react-native": "^0.30.0",
    "react-redux": "^4.4.5",
    "redux": "^3.3.1",
    "sw-toolbox": "^3.1.1",
    "to-fast-properties": "^1.0.2",
    "whatwg-fetch": "^0.9.0"
  }
}
